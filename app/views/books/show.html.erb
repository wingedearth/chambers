<div class="container">
  <div class="container-image"><%= image_tag @book.image_uri %></div>
  <h2><%= link_to @book.title, @book.book_uri %></h2>
  <h3><%= @book.author %></h3>
  <p><%= @book.description %></p>
  <ul class="nav nav-pills">
    <li role="presentation"><%= link_to "Back", books_path %></li>
    <li role="presentation"><%= link_to "Download", @book.book_uri %></li>
    <li role="presentation"><%= link_to "Edit", edit_book_path %></li>
    <li role="presentation"><%= link_to "Delete", book_path, method: :delete, data: {confirm: "Are you sure?"} %></li>
  </ul>
</div>
